<!doctype html>
<html lang="tr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Boston Dershane Evi</title>
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap");

    :root {
      --bg-0: #0a1017;
      --bg-1: #101926;
      --text: #f1f4fa;
      --muted: #b7c1d1;
      --gold: #c6a266;
      --gold-2: #d6b884;
      --line: rgba(255, 255, 255, 0.12);
      --line-soft: rgba(255, 255, 255, 0.09);
      --container: 1100px;
      --space-1: 8px;
      --space-2: 12px;
      --space-3: 18px;
      --space-4: 28px;
      --space-5: 40px;
      --space-6: 64px;
      --space-7: 92px;
      --space-8: 124px;
    }

    * { box-sizing: border-box; }

    html { scroll-behavior: smooth; }

    @media (prefers-reduced-motion: reduce) {
      html { scroll-behavior: auto; }
    }

    body {
      margin: 0;
      min-height: 100vh;
      font-family: "Space Grotesk", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
      color: var(--text);
      background:
        radial-gradient(1200px 700px at 88% -14%, rgba(198, 162, 102, 0.1), transparent 58%),
        radial-gradient(900px 560px at 12% -8%, rgba(72, 96, 132, 0.22), transparent 63%),
        linear-gradient(180deg, var(--bg-1), var(--bg-0));
      line-height: 1.58;
      letter-spacing: 0.004em;
      overflow-x: hidden;
      position: relative;
    }

    body::before {
      content: "";
      position: fixed;
      inset: 0;
      pointer-events: none;
      z-index: 0;
      background:
        repeating-linear-gradient(0deg, rgba(255, 255, 255, 0.028) 0px, rgba(255, 255, 255, 0.028) 1px, transparent 1px, transparent 52px),
        repeating-linear-gradient(90deg, rgba(255, 255, 255, 0.026) 0px, rgba(255, 255, 255, 0.026) 1px, transparent 1px, transparent 52px),
        repeating-linear-gradient(0deg, rgba(255, 255, 255, 0.012) 0px, rgba(255, 255, 255, 0.012) 1px, transparent 1px, transparent 4px),
        repeating-linear-gradient(90deg, rgba(255, 255, 255, 0.011) 0px, rgba(255, 255, 255, 0.011) 1px, transparent 1px, transparent 4px);
      opacity: 0.2;
    }

    a { color: inherit; text-decoration: none; }

    .container {
      width: min(calc(100% - 2rem), var(--container));
      margin-inline: auto;
      position: relative;
      z-index: 1;
    }

    .hero {
      position: relative;
      padding: calc(var(--space-8) + 12px) 0 var(--space-8);
      overflow: hidden;
      min-height: 760px;
    }

    .hero-copy {
      position: relative;
      z-index: 2;
      max-width: 670px;
    }

    .kicker {
      margin: 0;
      text-transform: uppercase;
      letter-spacing: 0.24em;
      color: var(--gold-2);
      font-weight: 600;
      font-size: 0.72rem;
    }

    h1 {
      margin: calc(var(--space-4) + 10px) 0 0;
      font-size: clamp(2.5rem, 7.4vw, 5.9rem);
      line-height: 0.95;
      letter-spacing: -0.022em;
      max-width: 16ch;
      text-wrap: balance;
    }

    .subline {
      margin: var(--space-4) 0 0;
      color: #c7d1df;
      font-size: clamp(1.03rem, 2vw, 1.28rem);
      line-height: 1.62;
      max-width: 56ch;
    }

    .subline .dim {
      color: rgba(199, 209, 223, 0.74);
    }

    .hero-actions {
      margin-top: var(--space-5);
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      gap: var(--space-3);
    }

    .target-pill {
      min-height: 36px;
      display: inline-flex;
      align-items: center;
      padding: 0 14px;
      border-radius: 999px;
      border: 1px solid rgba(204, 165, 92, 0.25);
      background: rgba(204, 165, 92, 0.12);
      color: #e0bd7b;
      letter-spacing: 0.02em;
      font-size: 0.88rem;
      font-weight: 600;
      font-variant-numeric: tabular-nums;
    }

    .btn-primary {
      min-height: 50px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0 24px;
      border-radius: 999px;
      border: 1px solid rgba(255, 255, 255, 0.1);
      background: linear-gradient(90deg, #b88e50, #d4b680);
      color: #17120d;
      font-weight: 700;
      letter-spacing: 0.01em;
      transition: transform 0.2s ease, filter 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-primary:hover {
      transform: translateY(-1px);
      filter: brightness(1.03);
      box-shadow: 0 6px 14px rgba(0, 0, 0, 0.22), 0 0 18px rgba(198, 162, 102, 0.14);
    }

    .btn-primary:focus-visible {
      outline: 2px solid var(--gold-2);
      outline-offset: 3px;
    }

    .progress {
      margin-top: calc(var(--space-6) + 8px);
      position: relative;
      max-width: 760px;
    }

    .progress-percent {
      position: absolute;
      right: 0;
      top: -20px;
      font-size: clamp(1.2rem, 3vw, 2rem);
      line-height: 1;
      font-weight: 700;
      color: rgba(214, 184, 132, 0.06);
      letter-spacing: -0.01em;
      font-variant-numeric: tabular-nums;
      pointer-events: none;
      user-select: none;
    }

    .progress-status {
      margin: 0 0 var(--space-2);
      color: #d7e0ec;
      font-size: clamp(1.225rem, 2.1vw, 1.385rem);
      letter-spacing: 0.01em;
      font-variant-numeric: tabular-nums;
      font-weight: 600;
    }

    .progress-track {
      width: 100%;
      height: 22px;
      border-radius: 999px;
      overflow: hidden;
      background: rgba(255, 255, 255, 0.08);
      border: 1px solid rgba(255, 255, 255, 0.16);
      box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.24);
    }

    .progress-fill {
      width: 0%;
      height: 100%;
      border-radius: inherit;
      background:
        repeating-linear-gradient(90deg, rgba(255, 255, 255, 0.28) 0px, rgba(255, 255, 255, 0.28) 1px, transparent 1px, transparent 16px),
        repeating-linear-gradient(0deg, rgba(0, 0, 0, 0.12) 0px, rgba(0, 0, 0, 0.12) 1px, transparent 1px, transparent 11px),
        linear-gradient(90deg, #b88c4f, #d7ba84);
      box-shadow: 0 0 40px rgba(198, 162, 102, 0.56), inset 0 0 0 1px rgba(255, 255, 255, 0.18);
      transition: width 1.45s cubic-bezier(.2, .8, .2, 1);
    }

    .hero-art {
      position: absolute;
      right: 40px;
      top: 60px;
      width: min(72vw, 980px);
      height: min(84vh, 820px);
      opacity: 0.1;
      z-index: 1;
      pointer-events: none;
      filter: blur(0.7px);
      -webkit-mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 10%, rgba(0, 0, 0, 0.25) 72%, transparent 100%);
      mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 1) 10%, rgba(0, 0, 0, 0.25) 72%, transparent 100%);
    }

    .hero-art path,
    .hero-art line,
    .hero-art polyline,
    .hero-art rect {
      stroke: #d0bc98;
      stroke-width: 1.25;
      stroke-linecap: round;
      stroke-linejoin: round;
      fill: none;
    }

    .section {
      padding: 0 0 var(--space-7);
    }

    .section-head {
      border-top: 1px solid rgba(255, 255, 255, 0.14);
      padding-top: var(--space-5);
      margin-bottom: var(--space-4);
    }

    .section-label {
      margin: 0;
      text-transform: uppercase;
      letter-spacing: 0.22em;
      font-size: 0.74rem;
      font-weight: 600;
      color: #d7be90;
    }

    .cards {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: var(--space-4);
    }

    .card {
      padding: var(--space-5) var(--space-4);
      border-radius: 14px;
      background: rgba(255, 255, 255, 0.015);
      border: 1px solid rgba(255, 255, 255, 0.06);
      min-height: 240px;
    }

    .card .num {
      margin: 0;
      font-size: clamp(2rem, 4vw, 3.1rem);
      line-height: 1;
      color: rgba(214, 184, 132, 0.34);
      letter-spacing: 0.09em;
      font-weight: 700;
      font-variant-numeric: tabular-nums;
    }

    .card h3 {
      margin: var(--space-3) 0 var(--space-2);
      font-size: clamp(1.2rem, 2vw, 1.46rem);
      line-height: 1.24;
      letter-spacing: -0.01em;
      font-weight: 600;
    }

    .card p {
      margin: 0;
      color: #c0cada;
      font-size: 1.02rem;
      line-height: 1.78;
      max-width: 30ch;
    }

    .contrib-note {
      margin: var(--space-3) 0 var(--space-4);
      color: #cbd5e4;
      font-size: 1rem;
    }

    .contrib-grid {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: var(--space-4);
    }

    .contrib-box {
      padding: var(--space-4);
      border-radius: 14px;
      border: 1px solid rgba(255, 255, 255, 0.08);
      background: rgba(255, 255, 255, 0.015);
    }

    .contrib-box h3 {
      margin: 0 0 var(--space-3);
      font-size: 1.28rem;
      letter-spacing: -0.01em;
      font-weight: 600;
    }

    .method {
      padding: 10px 0;
      border-top: 1px solid var(--line-soft);
      color: #dbe3ef;
      font-size: 0.98rem;
      letter-spacing: 0.01em;
    }

    .method:first-of-type {
      border-top: 0;
      padding-top: 0;
    }

    footer {
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      padding: var(--space-4) 0 var(--space-5);
      text-align: center;
      color: #cad4e3;
      letter-spacing: 0.04em;
      font-size: 0.92rem;
    }

    .reveal {
      opacity: 0;
      transform: translateY(14px);
      transition: opacity 0.75s ease, transform 0.75s ease;
    }

    .reveal.show {
      opacity: 1;
      transform: translateY(0);
    }

    @media (max-width: 960px) {
      .hero {
        min-height: auto;
        padding-top: var(--space-7);
        padding-bottom: var(--space-7);
      }

      .hero-art {
        right: -40%;
        top: 72px;
        width: min(136vw, 860px);
        height: min(58vh, 520px);
        opacity: 0.09;
      }

      .cards,
      .contrib-grid {
        grid-template-columns: 1fr;
      }

      .progress {
        margin-top: var(--space-6);
      }
    }

    @media (prefers-reduced-motion: reduce) {
      .reveal, .btn-primary, .progress-fill {
        transition: none !important;
        transform: none !important;
      }
    }
  </style>
</head>
<body>
  <main>
    <section class="hero container" aria-labelledby="heroBaslik">
      <svg class="hero-art" viewBox="0 0 700 560" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <polyline points="90,420 250,280 420,280 580,420" />
        <polyline points="130,420 130,260 340,150 550,260 550,420" />
        <line x1="340" y1="150" x2="340" y2="80" />
        <line x1="310" y1="80" x2="370" y2="80" />
        <rect x="275" y="328" width="128" height="92" rx="3" />
        <rect x="178" y="300" width="70" height="56" rx="3" />
        <rect x="433" y="300" width="70" height="56" rx="3" />
        <line x1="178" y1="328" x2="248" y2="328" />
        <line x1="433" y1="328" x2="503" y2="328" />
        <line x1="340" y1="280" x2="340" y2="420" />
        <line x1="130" y1="260" x2="550" y2="260" />
        <line x1="95" y1="420" x2="585" y2="420" />
        <polyline points="118,442 340,472 562,442" />
        <line x1="205" y1="244" x2="205" y2="420" />
        <line x1="475" y1="244" x2="475" y2="420" />
        <line x1="165" y1="224" x2="340" y2="124" />
        <line x1="515" y1="224" x2="340" y2="124" />
        <line x1="240" y1="260" x2="240" y2="208" />
        <line x1="440" y1="260" x2="440" y2="208" />
        <line x1="240" y1="208" x2="440" y2="208" />
      </svg>

      <div class="hero-copy">
        <p class="kicker reveal">BOSTON DERSHANE EVİ PROJESİ</p>
        <h1 id="heroBaslik" class="reveal">Boston’da cemaat var;<br>
kalıcı dershane evi yok.<br>
Bunu birlikte değiştirelim.</h1>
        <p class="subline reveal">Boston, öğrencilerin ve ilim insanlarının buluştuğu bir merkez. Bu merkezde kalıcı bir dershane eviyle süreklilik kurmak istiyoruz. <span class="dim">Bu ev, Boston’daki okumalar için süreklilik ve istikrar olacak.</span></p>

        <div class="hero-actions reveal">
          <span id="hedefSatiri" class="target-pill">Hedef: $855,000</span>
          <a href="#katki" class="btn-primary">Katkı Yap</a>
        </div>

        <div class="progress reveal" aria-label="Bağış İlerlemesi">
          <span id="percentGhost" class="progress-percent">25%</span>
          <p id="progressLine" class="progress-status">$214,600 toplandı — $640,400 kaldı</p>
          <div class="progress-track" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0" aria-labelledby="progressLine">
            <div id="progressFill" class="progress-fill"></div>
          </div>
        </div>
      </div>
    </section>

    <section id="neden" class="section container" aria-label="Neden Boston">
      <div class="section-head">
        <p class="section-label">NEDEN BOSTON</p>
      </div>

      <div class="cards">
        <article class="card">
          <p class="num">01</p>
          <h3>Merkez ve etki</h3>
          <p>Öğrenciler ve araştırmacılar burada kesişir; kurulan süreklilik Amerika geneline etki eder.</p>
        </article>
        <article class="card">
          <p class="num">02</p>
          <h3>Dinamik cemaat</h3>
          <p>Büyük bir okuyucu topluluğu var; kalıcı bir mekân olmayınca programlar sürdürülebilir olmuyor.</p>
        </article>
        <article class="card">
          <p class="num">03</p>
          <h3>Süreklilik</h3>
          <p>Sabit bir dershane evi, okuma düzenini ve misafir ağırlamayı istikrara kavuşturur.</p>
        </article>
      </div>
    </section>

    <section id="katki" class="section container" aria-label="Katkı">
      <div class="section-head">
        <p class="section-label">KATKI</p>
      </div>
      <p class="contrib-note">Detaylar yakında bu sayfada paylaşılacak.</p>

      <div class="contrib-grid">
        <article class="contrib-box">
          <h3>ABD</h3>
          <div class="method">Zelle</div>
          <div class="method">ACH</div>
          <div class="method">Bank Transfer</div>
        </article>
        <article class="contrib-box">
          <h3>Türkiye</h3>
          <div class="method">IBAN</div>
          <div class="method">EFT</div>
          <div class="method">Havale</div>
        </article>
      </div>
    </section>
  </main>

  <footer>
    <div class="container">Boston Dershane Evi</div>
  </footer>

  <script>
    const target = 855000;
    const current = 214600;

    const remaining = Math.max(target - current, 0);
    const percent = Math.round((current / target) * 100);
    const formatCurrency = (value) => `$${new Intl.NumberFormat("en-US").format(value)}`;

    const targetEl = document.getElementById("hedefSatiri");
    const progressLineEl = document.getElementById("progressLine");
    const percentGhostEl = document.getElementById("percentGhost");
    const progressFillEl = document.getElementById("progressFill");
    const progressTrackEl = document.querySelector(".progress-track");
    const revealEls = document.querySelectorAll(".reveal");

    targetEl.textContent = `Hedef: ${formatCurrency(target)}`;
    progressLineEl.textContent = `${formatCurrency(current)} toplandı — ${formatCurrency(remaining)} kaldı`;
    percentGhostEl.textContent = `${percent}%`;
    progressTrackEl.setAttribute("aria-valuenow", String(percent));

    const reduceMotion = window.matchMedia("(prefers-reduced-motion: reduce)").matches;

    if (reduceMotion) {
      revealEls.forEach((el) => el.classList.add("show"));
      progressFillEl.style.width = `${percent}%`;
    } else {
      requestAnimationFrame(() => {
        revealEls.forEach((el, i) => setTimeout(() => el.classList.add("show"), i * 105));
        requestAnimationFrame(() => {
          progressFillEl.style.width = `${percent}%`;
        });
      });
    }
  </script>
</body>
</html>
